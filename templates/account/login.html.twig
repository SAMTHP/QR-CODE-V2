{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/login.css">
{% endblock %}

{% block body %}
     <div class="wrapper fadeInDown">
        <div id="formContent" class="shadow">
            <div class="fadeIn first mt-2">
                <i class="far fa-user-circle fa-4x text-primary"></i>
            </div>
            <!-- Tabs Titles -->
            <h3 class="text-muted font-weight-bold">Identification</h3>
            <!-- Login Form -->
            {% if hasError %}
                <div class="alert alert-danger">
                    Une erreur est survenue, le nom d'utilisateur ou alors le mot de passe est invalide
                </div>
            {% endif %}
            <form action="{{ path('account_login') }}" method="post">
                <input type="email" id="email" class="fadeIn second" name="_username" placeholder="Adresse email" value="{{ username }}" required>
                <input type="password" id="password" class="fadeIn third" name="_password" placeholder="Mot de passe" required>
                <div class="d-flex justify-content-center mt-2 mb-2 mx-5 row">
                    <button type="submit" class="btn btn-success shadow col-xs-12 col-sm-10 col-md-4">Se connecter</button>
                </div>
            </form>

            <div id="formFooter">
                <p>QR code manager</p>
            </div>
        </div>
    </div>
{% endblock %}